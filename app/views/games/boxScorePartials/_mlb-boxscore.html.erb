				<td><%= inningScore[6]['homeScore'] %></td>
				<td><%= inningScore[7]['homeScore'] %></td>
				<td><%= inningScore[8]['homeScore'] %></td>
				<td><%= inningTotal['homeScore'] %></td>
			</tr>
