			<tr class="homeTotals">
				<td><%= teamName['homeTeam']['City'] %> <%= teamName['homeTeam']['Name'] %></td>
				<td><%= inningScore[0]['homeScore'] %></td>
				<td><%= inningScore[1]['homeScore'] %></td>
