<% teamName = g['game']%>
<% abb = g['game']%>
<% @awayQuarterTotals = []%>
<% @homeQuarterTotals = []%>

	<table class="headliner wholeBox">
			<tr class="header">
				<th> <!-- left blank on purpose --> </th>
				<th>1st</th>
				<th>2nd</th>
				<th>3rd</th>
				<th>4th</th>
