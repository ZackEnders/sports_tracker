
<% g = @games %>
<% awayPlayers = g['awayTeam']['awayPlayers']['playerEntry']%>
<% homePlayers = g['homeTeam']['homePlayers']['playerEntry']%>
<% inningScore = g['inningSummary']['inning']%>
<% inningTotal = g['inningSummary']['inningTotals']%>
<% teamCity = g['game']%>
<% teamName = g['game']%>
<% abb = g['game']%>



<body id="bodyBoxscore">
	<div class="headliner">
		<div class="font" id="Team">
			<div class="teamCity"><%= teamCity['awayTeam']['City'] %></div>
			<div class="teamName"><%= teamName['awayTeam']['Name'] %></div>
			<div class="homeAway"> Away </div>
			<div class="Score"><%= inningTotal['awayScore'] %> </div>
		</div>

		<p class="font l"> FINAL</p>

		<div class="font" id="Team">
			<div class="teamCity"><%= g['game']['homeTeam']['City'] %></div>
			<div class="teamName"><%= g['game']['homeTeam']['Name'] %></div>
			<div class="homeAway"> Home </div>
			<div class="Score"><%= g['inningSummary']['inningTotals']['homeScore'] %></div>
		</div>
	</div>

	<div>
		<table class="headliner" id="baseballScoreBoard">
			<tr>
				<th> <!-- left blank on purpose --> </th>
				<th>1st</th>
				<th>2nd</th>
				<th>3rd</th>
				<th>4th</th>
				<th>5th</th>
				<th>6th</th>
				<th>7th</th>
				<th>8th</th>
				<th>9th</th>
				<th>Total</th>
			</tr>
			<tr>
				<td><%= abb['awayTeam']['Abbreviation']%></td>
					<% inningScore.each do |q|%>
						<td><%= q['awayScore'] %></td>
					<% end %>
				<td><%= inningTotal['awayScore']%></td>
			</tr>
			<tr>
				<td><%= abb['homeTeam']['Abbreviation']%></td>
					<% inningScore.each do |q|%>
						<td><%= q['homeScore'] %></td>
					<% end %>
				<td><%= inningTotal['homeScore']%></td>
			</tr>
		</table>
	</div>
<!-- Build a stats box here -->

	
</body>	